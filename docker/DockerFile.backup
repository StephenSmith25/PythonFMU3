FROM quay.io/pypa/manylinux_2_28_x86_64 AS build

# Install extra build dependencies
RUN yum install -y \
    cmake \
    git \
    make \
    gcc \
    gcc-c++ \
    python3-devel

WORKDIR /io

COPY . .

WORKDIR /io/tmp-build

RUN cmake /io/pythonfmu3/pythonfmu-export -DCMAKE_BUILD_TYPE=Release \
    && cmake --build . --config Release